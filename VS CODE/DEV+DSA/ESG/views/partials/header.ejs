        width: 300px;
      }

      button {
        padding: 10px;
        border-radius: 5px;
        border: none;
        background-color: #ff6347;
        color: white;
        font-weight: bold;
        cursor: pointer;
        transition: background-color 0.3s ease;
        width: 200px;
      }

      button:hover {
        background-color: #ff473f;
      }

      .esg-elements {
        margin-top: 40px;

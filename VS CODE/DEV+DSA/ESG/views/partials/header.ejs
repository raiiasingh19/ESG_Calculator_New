      }

      .attribution {
        text-align: center;
        font-size: 12px;
        color: #999;
        margin-top: 30px;
      }

      /* Animation effects */

      @keyframes fade-in {
        from {
          opacity: 0;
        }
        to {
          opacity: 1;
        }
      }

      @keyframes scale-up {
        from {
          transform: scale(0.95);
        }
        to {
          transform: scale(1);
        }
      }

      @keyframes slide-up {
        from {
          transform: translateY(20px);
          opacity: 0;
        }
        to {
          transform: translateY(0);
          opacity: 1;
        }
      }
